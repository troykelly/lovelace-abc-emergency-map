{
  "name": "lovelace-abc-emergency-map",
  "version": "1.0.0",
  "description": "Custom Lovelace card for Home Assistant displaying ABC Emergency incident polygons on a Leaflet map",
  "author": "Troy Kelly <troy@aperim.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/troykelly/lovelace-abc-emergency-map.git"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "hacs",
    "leaflet",
    "map",
    "emergency",
    "australia",
    "bushfire",
    "flood"
  ],
  "type": "module",
  "main": "dist/abc-emergency-map-card.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run typecheck && pnpm run lint && pnpm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/leaflet": "^1.9.21",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.4.0",
    "rollup": "^4.28.0",
    "tslib": "^2.8.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "home-assistant-js-websocket": "^9.4.0",
    "leaflet": "^1.9.4",
    "lit": "^3.2.0"
  }
}
